<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    tools:context="jmg.android.questionario.Questao2Activity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!-- header-->
    <TextView
        android:id="@+id/textHeaderP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:keepScreenOn="true"
        android:text="@string/header"
        android:textColor="#111111"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:background = "#33cc33"

        />

    <!-- footer-->
    <TextView
        android:id="@+id/textFooterP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/footer"
        android:textColor="#111111"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background = "#33cc33"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:text="PrÃ³ximo"
        android:layout_width="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textFooterP2"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnProximoP2"
        />

    <LinearLayout
        android:id="@+id/layoutConteudoP2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textHeaderP2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnProximoP2">

        <TextView
            android:text="Pergunta 2/5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPergunta25"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:text="Pergunta 2?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewP2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg2"
            android:checkedButton="@+id/r2a">

            <RadioButton
                android:text="Resposta 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2a"
                android:layout_weight="1" />

            <RadioButton
                android:text="Resposta 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2b"
                android:layout_weight="1" />

            <RadioButton
                android:text="Resposta 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2c"
                android:layout_weight="1" />
        </RadioGroup>


    </LinearLayout>


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</RelativeLayout>
